{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
  
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    
  },
  "include": ["src"]
}
